<h1>Log In</h1>

<%= form_with url: log_in_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :login %>
    <%= form.text_field :login %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Log In" %>
<% end %>